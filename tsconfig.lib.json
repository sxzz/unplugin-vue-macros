{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019"],
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "customConditions": ["dev"]
  },
  "include": ["packages", "scripts"],
  "exclude": ["**/dist", "**/tests", "packages/volar", "**/vue2-macros*.d.ts"]
}
